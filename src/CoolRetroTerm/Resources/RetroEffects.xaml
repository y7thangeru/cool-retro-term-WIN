<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Retro CRT Visual Effects -->
    
    <!-- CRT Screen Background Gradient -->
    <RadialGradientBrush x:Key="CRTScreenBrush">
        <GradientStop Color="#001100" Offset="0"/>
        <GradientStop Color="#000800" Offset="0.7"/>
        <GradientStop Color="#000000" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Alternative Amber Screen -->
    <RadialGradientBrush x:Key="AmberScreenBrush">
        <GradientStop Color="#221100" Offset="0"/>
        <GradientStop Color="#110800" Offset="0.7"/>
        <GradientStop Color="#000000" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- White/Monochrome Screen -->
    <RadialGradientBrush x:Key="WhiteScreenBrush">
        <GradientStop Color="#111111" Offset="0"/>
        <GradientStop Color="#080808" Offset="0.7"/>
        <GradientStop Color="#000000" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Blue Screen -->
    <RadialGradientBrush x:Key="BlueScreenBrush">
        <GradientStop Color="#001122" Offset="0"/>
        <GradientStop Color="#000811" Offset="0.7"/>
        <GradientStop Color="#000000" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Scanline Effects -->
    <DrawingBrush x:Key="GreenScanlinesBrush" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,1,4"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00FF00" Offset="0"/>
                        <GradientStop Color="#00CC00" Offset="0.2"/>
                        <GradientStop Color="#008800" Offset="0.5"/>
                        <GradientStop Color="#004400" Offset="0.8"/>
                        <GradientStop Color="#002200" Offset="1"/>
                    </LinearGradientBrush>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <DrawingBrush x:Key="AmberScanlinesBrush" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,1,4"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFAA00" Offset="0"/>
                        <GradientStop Color="#CC8800" Offset="0.2"/>
                        <GradientStop Color="#886600" Offset="0.5"/>
                        <GradientStop Color="#443300" Offset="0.8"/>
                        <GradientStop Color="#221100" Offset="1"/>
                    </LinearGradientBrush>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <DrawingBrush x:Key="WhiteScanlinesBrush" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,1,4"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#CCCCCC" Offset="0.2"/>
                        <GradientStop Color="#888888" Offset="0.5"/>
                        <GradientStop Color="#444444" Offset="0.8"/>
                        <GradientStop Color="#222222" Offset="1"/>
                    </LinearGradientBrush>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <DrawingBrush x:Key="BlueScanlinesBrush" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,1,4"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0088FF" Offset="0"/>
                        <GradientStop Color="#0066CC" Offset="0.2"/>
                        <GradientStop Color="#004488" Offset="0.5"/>
                        <GradientStop Color="#002244" Offset="0.8"/>
                        <GradientStop Color="#001122" Offset="1"/>
                    </LinearGradientBrush>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <!-- Screen Curvature Effect (simplified using transforms) -->
    <Style x:Key="CurvedScreenStyle" TargetType="FrameworkElement">
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <SkewTransform AngleX="0" AngleY="0"/>
                    <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="0.5" CenterY="0.5"/>
                </TransformGroup>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Glow Effects -->
    <Style x:Key="GreenGlowStyle" TargetType="FrameworkElement">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="AmberGlowStyle" TargetType="FrameworkElement">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFAA00" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="WhiteGlowStyle" TargetType="FrameworkElement">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFFFFF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="BlueGlowStyle" TargetType="FrameworkElement">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#0088FF" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- CRT Burn-in Effect (simulated with opacity layers) -->
    <VisualBrush x:Key="BurnInOverlay" TileMode="None" Stretch="Fill">
        <VisualBrush.Visual>
            <Grid Background="Transparent">
                <!-- Simulated burn-in pattern -->
                <Rectangle Fill="#001100" Opacity="0.1" Margin="50,50,50,50"/>
                <Rectangle Fill="#002200" Opacity="0.05" Margin="100,100,100,100"/>
            </Grid>
        </VisualBrush.Visual>
    </VisualBrush>
    
    <!-- Noise Pattern for static effect -->
    <DrawingBrush x:Key="NoisePattern" TileMode="Tile" Viewport="0,0,8,8" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#01FFFFFF">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#02FFFFFF">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="2,3,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#01FFFFFF">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="5,1,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#02FFFFFF">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="7,6,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <!-- Flickering Animation for CRT effect -->
    <Storyboard x:Key="CRTFlickerAnimation" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
            <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
            <DiscreteDoubleKeyFrame KeyTime="0:0:0.1" Value="0.98"/>
            <DiscreteDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            <DiscreteDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            <DiscreteDoubleKeyFrame KeyTime="0:0:2.05" Value="0.95"/>
            <DiscreteDoubleKeyFrame KeyTime="0:0:2.1" Value="1"/>
            <DiscreteDoubleKeyFrame KeyTime="0:0:5" Value="1"/>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    
    <!-- Subtle brightness variation animation -->
    <Storyboard x:Key="BrightnessVariationAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.95" To="1.05" Duration="0:0:3"
                        AutoReverse="True"/>
    </Storyboard>
    
</ResourceDictionary>