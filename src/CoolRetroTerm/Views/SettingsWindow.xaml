<Window x:Class="CoolRetroTerm.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Cool Retro Term" 
        Height="500" 
        Width="600"
        ResizeMode="CanResize"
        Background="#222222"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="BorderBrush" Value="#004400"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#00AA00"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#00FF00"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00AA00"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#00FF00"/>
        </Style>
        
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="#00FF00"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="BorderBrush" Value="#006600"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" Background="#222222">
            
            <!-- Display Tab -->
            <TabItem Header="Display" Foreground="#00FF00">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        
                        <GroupBox Header="Font Settings">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="Font Family:"/>
                                    <ComboBox x:Name="FontFamilyComboBox" 
                                             Grid.Row="0" Grid.Column="1" 
                                             Margin="5"/>
                                    
                                    <Label Grid.Row="1" Grid.Column="0" Content="Font Size:"/>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                        <Slider x:Name="FontSizeSlider" 
                                               Width="200" 
                                               Minimum="8" 
                                               Maximum="32" 
                                               Value="14"
                                               TickFrequency="1"
                                               IsSnapToTickEnabled="True"/>
                                        <TextBlock x:Name="FontSizeLabel" 
                                                  Text="{Binding ElementName=FontSizeSlider, Path=Value}"
                                                  Margin="10,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Colors">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="Foreground:"/>
                                    <TextBox x:Name="ForegroundColorTextBox" 
                                            Grid.Row="0" Grid.Column="1" 
                                            Text="#00FF00"
                                            Margin="5"/>
                                    <Button x:Name="ForegroundColorButton"
                                           Grid.Row="0" Grid.Column="2"
                                           Content="..."
                                           Width="30"
                                           Click="ForegroundColorButton_Click"/>
                                    
                                    <Label Grid.Row="1" Grid.Column="0" Content="Background:"/>
                                    <TextBox x:Name="BackgroundColorTextBox" 
                                            Grid.Row="1" Grid.Column="1" 
                                            Text="#000000"
                                            Margin="5"/>
                                    <Button x:Name="BackgroundColorButton"
                                           Grid.Row="1" Grid.Column="2"
                                           Content="..."
                                           Width="30"
                                           Click="BackgroundColorButton_Click"/>
                                    
                                    <Label Grid.Row="2" Grid.Column="0" Content="Presets:"/>
                                    <ComboBox x:Name="ColorPresetComboBox"
                                             Grid.Row="2" Grid.Column="1"
                                             Grid.ColumnSpan="2"
                                             Margin="5"
                                             SelectionChanged="ColorPresetComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Green on Black (Classic)" Tag="green"/>
                                        <ComboBoxItem Content="Amber on Black" Tag="amber"/>
                                        <ComboBoxItem Content="White on Black" Tag="white"/>
                                        <ComboBoxItem Content="Blue on Black" Tag="blue"/>
                                        <ComboBoxItem Content="Red on Black" Tag="red"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Visual Effects">
                            <StackPanel>
                                <CheckBox x:Name="EnableScanlinesCheckBox" 
                                         Content="Enable Scanlines" 
                                         IsChecked="True"
                                         Margin="5"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="20,5,5,5">
                                    <Label Content="Intensity:" Width="80"/>
                                    <Slider x:Name="ScanlineIntensitySlider" 
                                           Width="150" 
                                           Minimum="0" 
                                           Maximum="100" 
                                           Value="50"
                                           IsEnabled="{Binding ElementName=EnableScanlinesCheckBox, Path=IsChecked}"/>
                                    <TextBlock Text="{Binding ElementName=ScanlineIntensitySlider, Path=Value, StringFormat='{}{0:0}%'}"
                                              Margin="10,0,0,0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <CheckBox x:Name="EnableGlowCheckBox" 
                                         Content="Enable Glow" 
                                         IsChecked="True"
                                         Margin="5"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="20,5,5,5">
                                    <Label Content="Intensity:" Width="80"/>
                                    <Slider x:Name="GlowIntensitySlider" 
                                           Width="150" 
                                           Minimum="0" 
                                           Maximum="100" 
                                           Value="30"
                                           IsEnabled="{Binding ElementName=EnableGlowCheckBox, Path=IsChecked}"/>
                                    <TextBlock Text="{Binding ElementName=GlowIntensitySlider, Path=Value, StringFormat='{}{0:0}%'}"
                                              Margin="10,0,0,0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <CheckBox x:Name="EnableCurvatureCheckBox" 
                                         Content="Enable Screen Curvature" 
                                         IsChecked="True"
                                         Margin="5"/>
                                         
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Label Content="Opacity:" Width="80"/>
                                    <Slider x:Name="OpacitySlider" 
                                           Width="150" 
                                           Minimum="0.3" 
                                           Maximum="1.0" 
                                           Value="0.9"
                                           TickFrequency="0.1"/>
                                    <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat='{}{0:0%}'}"
                                              Margin="10,0,0,0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Terminal Tab -->
            <TabItem Header="Terminal" Foreground="#00FF00">
                <StackPanel Margin="10">
                    <GroupBox Header="Behavior">
                        <StackPanel>
                            <CheckBox x:Name="BlinkingCursorCheckBox" 
                                     Content="Blinking Cursor" 
                                     IsChecked="True"
                                     Margin="5"/>
                                     
                            <CheckBox x:Name="AutoScrollCheckBox" 
                                     Content="Auto Scroll to Bottom" 
                                     IsChecked="True"
                                     Margin="5"/>
                                     
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Content="History Size:" Width="100"/>
                                <TextBox x:Name="HistorySizeTextBox" 
                                        Text="1000" 
                                        Width="80"/>
                                <TextBlock Text="lines" 
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Shortcuts">
                        <StackPanel>
                            <TextBlock Text="Ctrl+C: Copy selected text" Margin="5"/>
                            <TextBlock Text="Ctrl+V: Paste" Margin="5"/>
                            <TextBlock Text="Ctrl+L: Clear screen" Margin="5"/>
                            <TextBlock Text="F11: Toggle fullscreen" Margin="5"/>
                            <TextBlock Text="Ctrl++: Zoom in" Margin="5"/>
                            <TextBlock Text="Ctrl+-: Zoom out" Margin="5"/>
                            <TextBlock Text="Ctrl+0: Reset zoom" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Button Panel -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0">
            <Button x:Name="ResetButton" 
                   Content="Reset to Defaults"
                   Click="ResetButton_Click"/>
            <Button x:Name="CancelButton" 
                   Content="Cancel"
                   Click="CancelButton_Click"/>
            <Button x:Name="OkButton" 
                   Content="OK"
                   IsDefault="True"
                   Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>